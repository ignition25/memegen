<h2>Sign up</h2>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {class: "form-horizontal signin-form"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :username, class: "col-lg-2 control-label" %>
    <div class="col-lg-10">
        <%= f.text_field :username, class: "form-control", :autofocus => true, :placeholder => "Username" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "col-lg-2 control-label" %>
    <div class="col-lg-10">
        <%= f.email_field :email, class: "form-control", :placeholder => "Email" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, class: "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
        <% if devise_mapping.rememberable? -%>
          <div class="checkbox">
            <label>
            <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
            </label>
        </div>
      <% end -%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
